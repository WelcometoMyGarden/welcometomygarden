{
  "hosting": [
    {
      "target": "production",
      "public": "dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "cleanUrls": true,
      "trailingSlash": false,
      "rewrites": [
        {
          "source": "/email-preferences",
          "function": {
            "functionId": "handleUnsubscribe",
            "region": "europe-west1",
            "pinTag": false
          }
        },
        {
          "source": "/error-log-tunnel",
          "function": {
            "functionId": "errorLogTunnel",
            "region": "europe-west1",
            "pinTag": false
          }
        },
        {
          "source": "**",
          "destination": "/200.html"
        }
      ]
    },
    {
      "target": "beta",
      "public": "dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "cleanUrls": true,
      "trailingSlash": false,
      "rewrites": [
        {
          "source": "/email-preferences",
          "function": {
            "functionId": "handleUnsubscribe",
            "region": "europe-west1",
            "pinTag": false
          }
        },
        {
          "source": "/error-log-tunnel",
          "function": {
            "functionId": "errorLogTunnel",
            "region": "europe-west1",
            "pinTag": false
          }
        },
        {
          "source": "**",
          "destination": "/200.html"
        }
      ]
    }
  ],
  "functions": {
    "source": "api",
    "predeploy": ["cd \"$RESOURCE_DIR\" && yarn lint"]
  },
  "emulators": {
    "functions": {
      "port": 5001,
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": 8080,
      "host": "0.0.0.0"
    },
    "storage": {
      "port": 9199,
      "host": "0.0.0.0"
    },
    "hosting": {
      "port": 4000,
      "host": "0.0.0.0"
    },
    "auth": {
      "port": 9099,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true,
      "port": 4001
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "extensions": {
    "storage-resize-images": "firebase/storage-resize-images@0.2.8"
  }
}
